{
    "compilerOptions": {
        "target": "esnext",
        "useDefineForClassFields": true,
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "importHelpers": true,
        "allowSyntheticDefaultImports": true,
        "lib": ["esnext", "dom"],
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
        "types": ["vite/client"],
        "noImplicitAny": false,
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts", "src/**/*.vue", "tests/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx"]
}
